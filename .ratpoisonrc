set font "Migu 1P-11"
set border 1
set fwcolor #0090ff
set bwcolor #242424
set fgcolor #4f9
set bgcolor #222
set barborder 2
set barpadding 20 5
set bargravity s
set framesels qwertyuiopasdfghjklzxcvbnm
set resizeunit 1

escape s-equal
addhook switchgroup groups

definekey top C-M-s-R restart

definekey top       s-Escape abort
definekey top       s-Return exec mydmenu -fn "sans-serif:size=15" -nb "#191919" -nf "#ffffff" -sb "#0077cc" -sf "#eeeeee"
definekey top     s-S-Return exec st
definekey top          s-Tab other
definekey top        s-C-Tab iother
definekey top        s-S-Tab cother
definekey top        s-M-Tab gother
definekey top  s-bracketleft iprev
definekey top s-bracketright inext
definekey top    s-braceleft cprev
definekey top   s-braceright cnext
definekey top    s-semicolon focuslast
definekey top        s-colon colon
definekey top   s-apostrophe select
definekey top     s-quotedbl gselect
definekey top        s-slash focus
definekey top        s-comma title
definekey top       s-period number
definekey top     s-question describekey
definekey top        s-grave gselect 0
definekey top        s-minus select -

definekey top s-M-grave select 0
definekey top s-1 select 1
definekey top s-2 select 2
definekey top s-3 select 3
definekey top s-4 select 4
definekey top s-5 select 5
definekey top s-6 select 6
definekey top s-7 select 7
definekey top s-8 select 8
definekey top s-9 select 9
definekey top s-0 select 10

definekey top s-M-1 gselect 1
definekey top s-M-2 gselect 2
definekey top s-M-3 gselect 3
definekey top s-M-4 gselect 4
definekey top s-M-5 gselect 5
definekey top s-M-6 gselect 6
definekey top s-M-7 gselect 7
definekey top s-M-8 gselect 8
definekey top s-M-9 gselect 9
definekey top s-M-0 gselect 10

definekey top  s-F1 exec ratpoison -c "frestore `ratpoison -c 'getenv fs1'`"
definekey top  s-F2 exec ratpoison -c "frestore `ratpoison -c 'getenv fs2'`"
definekey top  s-F3 exec ratpoison -c "frestore `ratpoison -c 'getenv fs3'`"
definekey top  s-F4 exec ratpoison -c "frestore `ratpoison -c 'getenv fs4'`"
definekey top  s-F5 exec ratpoison -c "frestore `ratpoison -c 'getenv fs5'`"
definekey top  s-F6 exec ratpoison -c "frestore `ratpoison -c 'getenv fs6'`"
definekey top  s-F7 exec ratpoison -c "frestore `ratpoison -c 'getenv fs7'`"
definekey top  s-F8 exec ratpoison -c "frestore `ratpoison -c 'getenv fs8'`"
definekey top  s-F9 exec ratpoison -c "frestore `ratpoison -c 'getenv fs9'`"
definekey top s-F10 exec ratpoison -c "frestore `ratpoison -c 'getenv fs10'`"
definekey top s-F11 exec ratpoison -c "frestore `ratpoison -c 'getenv fs11'`"
definekey top s-F12 exec ratpoison -c "frestore `ratpoison -c 'getenv fs12'`"

definekey top  s-C-F1 exec ratpoison -c "setenv fs1 `ratpoison -c 'fdump'`"
definekey top  s-C-F2 exec ratpoison -c "setenv fs2 `ratpoison -c 'fdump'`"
definekey top  s-C-F3 exec ratpoison -c "setenv fs3 `ratpoison -c 'fdump'`"
definekey top  s-C-F4 exec ratpoison -c "setenv fs4 `ratpoison -c 'fdump'`"
definekey top  s-C-F5 exec ratpoison -c "setenv fs5 `ratpoison -c 'fdump'`"
definekey top  s-C-F6 exec ratpoison -c "setenv fs6 `ratpoison -c 'fdump'`"
definekey top  s-C-F7 exec ratpoison -c "setenv fs7 `ratpoison -c 'fdump'`"
definekey top  s-C-F8 exec ratpoison -c "setenv fs8 `ratpoison -c 'fdump'`"
definekey top  s-C-F9 exec ratpoison -c "setenv fs9 `ratpoison -c 'fdump'`"
definekey top s-C-F10 exec ratpoison -c "setenv fs10 `ratpoison -c 'fdump'`"
definekey top s-C-F11 exec ratpoison -c "setenv fs11 `ratpoison -c 'fdump'`"
definekey top s-C-F12 exec ratpoison -c "setenv fs12 `ratpoison -c 'fdump'`"

definekey top s-a gnewbg
definekey top s-b banish
definekey top s-c exec ratpoison -c "echo $(sensors)"
definekey top s-d exec ratpoison -c "echo $(date-tz.sh)"
definekey top s-e exec ratpoison -c "echo $(free -m)"
definekey top s-f curframe
definekey top s-g grename
definekey top s-h focusleft
definekey top s-i remove
definekey top s-j focusdown
definekey top s-k focusup
definekey top s-l focusright
definekey top s-m gmove
definekey top s-n next
definekey top s-o only
definekey top s-p prev
definekey top s-q groups
definekey top s-r redo
definekey top s-s fselect
definekey top s-t exec ratpoison -c "echo $(uptime)"
definekey top s-u undo
definekey top s-v exec ratpoison -c "echo $(btspeaker)"
definekey top s-w windows
definekey top s-x exec
definekey top s-y exec ratpoison -c "echo $(df -h | grep -v /run)"
definekey top s-z resize

definekey top s-A gnew
definekey top s-H exec ratpoison -c hsplit -c exchangeright -c focusleft
definekey top s-J exec ratpoison -c vsplit -c focusdown
definekey top s-K exec ratpoison -c vsplit -c exchangedown -c focusup
definekey top s-L exec ratpoison -c hsplit -c focusright
definekey top s-M gnumber
definekey top s-N gnext
definekey top s-P gprev

definekey top   s-C-h exchangeleft
definekey top   s-C-j exchangedown
definekey top   s-C-k exchangeup
definekey top   s-C-l exchangeright
definekey top   s-M-h resize -10    0
definekey top   s-M-j resize   0   10
definekey top   s-M-k resize   0  -10
definekey top   s-M-l resize  10    0
definekey top   s-M-H resize -30    0
definekey top   s-M-J resize   0   30
definekey top   s-M-K resize   0  -30
definekey top   s-M-L resize  30    0
definekey top s-C-M-h resize -100   0
definekey top s-C-M-j resize   0  100
definekey top s-C-M-k resize   0 -100
definekey top s-C-M-l resize 100    0
